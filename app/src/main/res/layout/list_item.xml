<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/item_image"
        android:textSize="25sp"
        android:hint="Title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/item_description1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/item_image"
        android:layout_below="@id/item_title"
        android:textSize="18sp"
        android:hint="Description 1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/item_description2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/item_image"
        android:layout_below="@id/item_description1"
        android:textSize="15sp"
        android:hint="Description 2"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/item_description2"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_baseline_play_circle_outline_24" />

    </RelativeLayout>

</LinearLayout>